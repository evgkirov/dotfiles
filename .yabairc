yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config                                 \
    mouse_follows_focus          on             \
    focus_follows_mouse          off            \
    window_placement             second_child   \
    window_topmost               off            \
    window_opacity               off            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.5            \
    window_animation_duration    0.00           \
    split_ratio                  0.5            \
    auto_balance                 off            \
    normal_window_border_color   0x0100000      \
    focus_follows_mouse          off            \
    layout                       bsp            \
    top_padding                  40             \
    bottom_padding               6              \
    left_padding                 6              \
    right_padding                6              \
    window_gap                   6              \
