# open safari
#ctrl + cmd - return : /Users/evgkirov/Documents/dotfiles/bin/open_new_safari_window.sh
#ctrl + alt + cmd - return : /Users/evgkirov/Documents/dotfiles/bin/open_new_private_window.sh


# focus window
rctrl + rshift - h : yabai -m window --focus west
rctrl + rshift - j : yabai -m window --focus south
rctrl + rshift - k : yabai -m window --focus north
rctrl + rshift - l : yabai -m window --focus east

cmd - w -> : sleep 1 && yabai -m window --focus mouse

# stacks! p, [ and ]
rctrl + rshift - 0x21 : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
rctrl + rshift - 0x1E : yabai -m window --focus stack.next || yabai -m window --focus stack.first

hyper - p : yabai -m window --insert stack 
hyper - 0x21 : yabai -m window prev --stack mouse
hyper - 0x1E : yabai -m window next --stack mouse

# swap window
meh - h : yabai -m window --swap west
meh - j : yabai -m window --swap south
meh - k : yabai -m window --swap north
meh - l : yabai -m window --swap east

# move "push" window
hyper - h : yabai -m window --warp west
hyper - j : yabai -m window --warp south
hyper - k : yabai -m window --warp north
hyper - l : yabai -m window --warp east

# change layout of desktop 
meh - z : yabai -m space --layout bsp
meh - x : yabai -m space --layout stack
meh - c : yabai -m space --layout float

# balance size of windows
hyper - b : yabai -m space --balance


