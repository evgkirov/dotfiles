# PragmataPro
font-family = PragmataPro Liga
font-size = 13
font-feature = cv04

macos-titlebar-style = hidden
window-padding-balance = true
window-padding-color = extend
adjust-underline-thickness = -5

quick-terminal-space-behavior = remain

initial-window = false
mouse-hide-while-typing = true

keybind = cmd+r=reload_config
keybind = global:alt+a=toggle_quick_terminal
keybind = all:global:alt+t=new_window
keybind = cmd+t=unbind
keybind = performable:cmd+k=jump_to_prompt:-1
keybind = performable:cmd+j=jump_to_prompt:1

theme = light:everforest-light-medium.ghostty,dark:everforest-dark-medium.ghostty
